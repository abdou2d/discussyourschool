<div class="student-profile container">

    <div class="data">
        <h2><strong><%= @student.name %></strong></h2>
        <h3>do <%= @student.school_name %></h3>
    </div>

    <% if student_signed_in? && current_student == @student  %>
        <div class="options">
            <%= link_to "Editar perfil", edit_student_path(@student), class: "waves-effect waves-light btn yellow darken-3" %>
        </div>
    <% end %>

    <div class="row">
        <div class="col s6">
            <div class="posts">
                <ul class="collection with-header">
                    <li class="collection-header">
                        <% if @posts_owner.count == 0 || @posts_visitor.count == 0 %>
                            <h4>Sem problemas divulgados</h4>
                        <% else %>
                            <h4>Problemas divulgados</h4>
                        <% end %>
                    </li>

                    <% if student_signed_in? && current_student.id == @student.id %>
                        <% @posts_owner.each do |post| %>
                            <%= link_to post.title, post_path(post), class: "collection-item" %>
                        <% end %>
                    <% else %>
                        <% @posts_visitor.each do |post| %>
                            <%= link_to post.title, post_path(post), class: "collection-item" %>
                        <% end %>
                    <% end %>

                </ul>
            </div>
        </div>

        <div class="col s6">
            <div class="best-solutions">
                <ul class="collection with-header">
                    <li class="collection-header"><h4>Melhores soluções</h4></li>
                    <a href="#!" class="collection-item">Bebedouro estragado (anônimo. Só eu posso ver)</a>
                    <a href="#!" class="collection-item">Carteira caída</a>
                    <a href="#!" class="collection-item">Banheiro fedido</a>
                </ul>
            </div>
        </div>
    </div>
</div>
