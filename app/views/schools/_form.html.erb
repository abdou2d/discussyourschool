<%= form_for @school do |f| %>
    <div class="row">
        <div class="input-field col s12">
            <%= f.label :name %>
            <%= f.text_field :name, class: "validate" %>
            <%= error_field @school, :name %>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">
            <%= f.label :email %>
            <%= f.text_field :email, class: "validate" %>
            <%= error_field @school, :email %>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s6">
            <%= f.label :phone %>
            <%= f.text_field :phone, class: "validate phone" %>
            <%= error_field @school, :phone %>
        </div>
        <div class="input-field col s6">
            <%= f.label :mec_code %>
            <%= f.number_field :mec_code, class: "validate" %>
            <%= error_field @school, :mec_code %>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s6">
            <%= f.label :password %>
            <%= f.password_field :password, class: "validate" %>
            <%= error_field @school, :password %>
        </div>
        <div class="input-field col s6">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "validate" %>
            <%= error_field @school, :password_confirmation %>
        </div>
    </div>

    <div class="row">
        <%= f.submit "Cadastrar escola!", class: "btn btn-large blue darken-1" %>
    </div>
<% end %>
